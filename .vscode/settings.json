{
    /* ============================================================================================================================ */
    /* ---------------------------------------------------- Formatting Settings --------------------------------------------------- */
    /* ============================================================================================================================ */

    "psi-header.variables": [
        ["projectname", "cpp-utils"]
    ],
    
    /* ============================================================================================================================ */
    /* ------------------------------------------------------- Build Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */

    // Conan configuration
    "conan.install_args": [
        "-s", "compiler.cppstd=20",
        "-b", "missing",
        "-c", "user.build:all=True"
    ],

    // CMake configuration
    "cmake.generator": "Ninja",
    "cmake.parallelJobs": 8,
    "cmake.configureSettings": {
        "CMAKE_VERBOSE_MAKEFILE" : "OFF",
    },
    
}