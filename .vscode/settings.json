{
    /* ============================================================================================================================ */
    /* ----------------------------------------------------- General Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */

    // Terminal settings
    // "terminal.integrated.fontSize": 17,
    "terminal.integrated.scrollback": 50000,

    /* ============================================================================================================================ */
    /* ------------------------------------------------------ Search Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */

    // Excluded directories
    "files.exclude": {
        "${workspaceFolder}/build/**": true,
        "${workspaceFolder}/extern/boost/**": true,
    },
    // Exclude files from watcher
    "files.watcherExclude": {
        "${workspaceFolder}/build/**": true,
        "${workspaceFolder}/extern/boost/**": true,
    },
    // Exculde files from C/C++ code analysis
    "C_Cpp.files.exclude": {
        "${workspaceFolder}/extern/boost/**": true,
    },

    // Search settings
    "search.useIgnoreFiles": false,

    /* ============================================================================================================================ */
    /* ------------------------------------------------------- CMake Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */

    // CMake config
    "cmake.ctestPath": "/usr/bin/ctest",
    "cmake.toolset": "",
    "cmake.configureOnOpen": false,
    "cmake.configureOnEdit": false,
    "cmake.sourceDirectory": "${workspaceFolder}",
    "cmake.generator": "Unix Makefiles",
    // Configuration settings
    "cmake.parallelJobs": 8,
    "cmake.installPrefix": "${workspaceFolder}",
    "cmake.configureSettings": {
        "CMAKE_VERBOSE_MAKEFILE" : "OFF",
    },

    /* ============================================================================================================================ */
    /* ------------------------------------------------------ Editor Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */
    // Words-wrap
    "editor.wordWrap": "off",
    
    // Intendation
    "editor.detectIndentation": false,
    "editor.autoIndent": "full",
    "editor.tabSize": 4,

    /* ============================================================================================================================ */
    /* ------------------------------------------------------ Visual Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */

    // Icons
    "vsicons.associations.files": [
        {"icon": "excel2",   "extensions": [".csv"],        "format": "svg"},
        {"icon": "rmd",      "extensions": ["ld"],          "format": "svg"},
        {"icon": "config",   "extensions": ["ioc"],         "format": "svg"},
        {"icon": "assembly", "extensions": ["s"],           "format": "svg"},
    ],
    "vsicons.associations.folders": [
        {"icon": "plugin", "extensions": ["extern", "dep"], "format": "svg"},
    ],

    /* ============================================================================================================================ */
    /* ---------------------------------------------------- Formatting Settings --------------------------------------------------- */
    /* ============================================================================================================================ */

    // Clang-format config
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    // Clang-format config [C/C++]
    "[c][cpp]": {
        "editor.formatOnType": false,
        "editor.formatOnSave": false,
        "editor.formatOnSaveMode": "file",
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },

    // Header's configuration
    "psi-header.config": {
        "forceToTop": true,
        "initials": "K.P.",
        "author": "Krzysztof Pierczyk",
        "blankLinesAfter": 1,
        "authorEmail": "krzysztof.pierczyk@gmail.com",
        "creationDateZero": "asIs"
    },

    // Header's tracking configuration
    "psi-header.changes-tracking": {
        "isActive": true,
        "modDate": "@modified",
        "modDateFormat": "dd-MM-yyyy hh:nn:ss",
        "enforceHeader": false,
        "autoHeader": "off",
        "updateLicenseVariables": true,
    },

    // Custom variables
    "psi-header.variables": [
        ["projectname", "cpp-utils"]
    ],

    // Language configuration
    "psi-header.lang-config": [
        {
            "language": "cpp",
            "begin": "/* ============================================================================================================================ *//**",
            "end": " */// ============================================================================================================================= */",
            "prefix": " * ",
            "afterHeader": [
                "#ifndef ___H__",
                "#define ___H__",
                "",
                "/* =========================================================== Includes =========================================================== */",
                "",
                "",
                "",
                "/* ============================================================= Doc ============================================================== */",
                "",
                "/**",
                " * @addtogroup ",
                " * @{",
                " */",
                "",
                "/* ========================================================== Namespaces ========================================================== */",
                "",
                "namespace {",
                "",
                "/* ================================================================================================================================ */",
                "",
                "} // End namespace",
                "",
                "/* ================================================================================================================================ */",
                "",
                "/**",
                " * @}",
                " */",
                "",
                "/* ================================================================================================================================ */",
                "",
                "#endif",
            ]
        },
        {
            "language": "c",
            "mapTo": "cpp"
        },
        {
            "language": "cmake",
            "begin": "# ====================================================================================================================================",
            "end": "# ====================================================================================================================================",
            "prefix": "# ",
        },
        {
            "language": "shellscript",
            "mapTo": "cmake"
        },
        {
            "language": "python",
            "begin": "# ====================================================================================================================================",
            "end": "# ====================================================================================================================================",
            "prefix": "# ",
            "afterHeader": [
                "# ============================================================== Doc =============================================================== #",
                "",
                "\"\"\" ",
                "",
                ".. module:: ",
                "   :platform: Unix",
                "   :synopsis: ",
                "",
                ".. moduleauthor:: <<author>> <<<authoremail>>>",
                "",
                "\"\"\"",
                "",
                "# ============================================================ Imports ============================================================= #",
                "",
                "",
                "",
                "# ============================================================ Script ============================================================== #",
                "",
                "",
                "",
                "# ================================================================================================================================== #",
            ]
        },
        {
            "language": "yaml",
            "mapTo": "cmake"
        },
        {
            "language": "ros.msg",
            "mapTo": "cmake"
        },
        {
            "language": "latex",
            "begin": "% ====================================================================================================================================",
            "end": "% ====================================================================================================================================",
            "prefix": "% ",
        },
        {
            "language": "bibtex",
            "mapTo": "latex"
        },
        {
            "language": "bat",
            "begin": ": ====================================================================================================================================",
            "end": ": ====================================================================================================================================",
            "prefix": ": ",
        },
        {
            "language": "arm",
            "begin": "/* ============================================================================================================================ *//**",
            "end": " */// ============================================================================================================================= */",
            "prefix": " * "
        },
        {
            "language": "plantuml",
            "begin": "/'' ==================================================================================================================================",
            "end": " ' ================================================================================================================================ '/",
            "prefix": " ' "
        },
        {
            "language": "xml",
            "begin": "<!-- =================================================================================================================================",
            "end": "  - ================================================================================================================================== -->",
            "prefix": "  - "
        },
    ],

    // Templates configuration
    "psi-header.templates": [
        {
            "language": "cpp",
            "template": [
                "@file       <<filename>>",
                "@author     <<author>> (<<authoremail>>)",
                "@maintainer <<author>> (<<authoremail>>)",
                "@date       <<filecreated('dddd, Do MMMM YYYY h:mm:ss a')>>",
                "@modified   <<dateformat('dddd, Do MMMM YYYY h:mm:ss a')>>",
                "@project    <<projectname>>",
                "@brief      ",
                "",
                "",
                "@copyright <<author>> Â© <<year>>"
            ]
        },
        {
            "language": "c",
            "mapTo": "cpp"
        },
        {
            "language": "cmake",
            "mapTo": "cpp"
        },
        {
            "language": "python",
            "mapTo": "cpp"
        },
        {
            "language": "yaml",
            "mapTo": "cpp"
        },
        {
            "language": "shellscript",
            "mapTo": "cpp"
        },
        {
            "language": "latex",
            "mapTo": "cpp"
        },
        {
            "language": "bibtex",
            "mapTo": "cpp"
        },
        {
            "language": "ros.msg",
            "mapTo": "cpp"
        },
        {
            "language": "bat",
            "mapTo": "cpp"
        },
        {
            "language": "arm",
            "mapTo": "cpp"
        },
        {
            "language": "plantuml",
            "mapTo": "cpp"
        },
        {
            "language": "xml",
            "mapTo": "cpp"
        },
    ],

    // Comment divider
    "comment-divider" : {
        "length" : 134,
        "shouldLengthIncludeIndent" : true,
        // Main header
        "mainHeaderFiller" : "=",
        "mainHeaderHeight" : "block",
        "mainHeaderAlign" : "center",
        // Subheader
        "subheaderFiller" : "=",
        "subheaderHeight" : "line",
        "subheaderAlign" : "center",
        // Sold line
        "lineFiller" : "=",
        // Language map
        "languagesMap" : {
            "python" :  [ "#", "#" ],
            "shellscript" :  [ "#", "#" ],
            "cmake" :  [ "#", "#" ],
            "cpp" :  [ "/*", "*/" ],
            "jsonc" :  [ "/*", "*/" ],
        },
    },

    /* ============================================================================================================================ */
    /* ---------------------------------------------------- Extensions Settings --------------------------------------------------- */
    /* ============================================================================================================================ */
    
    // LaTeX-related
	"latex-workshop.latex.outDir": "out",

    // Comments anchors
    "commentAnchors.tags.list": [
        {
            "tag": "LINK",
            "enabled": false
        }
    ],
    
    /* ============================================================================================================================ */
    /* ------------------------------------------------------- Other Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */

    // Files associations
    "files.associations": {
        ".clang-format": "yaml",
        "*.urdf": "xml",
        "*.svd": "xml",
        "utility": "cpp",
        "type_traits": "cpp",
        "array": "cpp",
        "compare": "cpp",
        "functional": "cpp",
        "istream": "cpp",
        "ostream": "cpp",
        "ranges": "cpp",
        "tuple": "cpp",
        "*.cmake.in": "cmake",
        "variant": "cpp",
        "cctype": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "any": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "*.tcc": "cpp",
        "bitset": "cpp",
        "chrono": "cpp",
        "complex": "cpp",
        "concepts": "cpp",
        "condition_variable": "cpp",
        "cstdint": "cpp",
        "deque": "cpp",
        "forward_list": "cpp",
        "list": "cpp",
        "map": "cpp",
        "set": "cpp",
        "unordered_map": "cpp",
        "unordered_set": "cpp",
        "vector": "cpp",
        "exception": "cpp",
        "algorithm": "cpp",
        "iterator": "cpp",
        "memory": "cpp",
        "memory_resource": "cpp",
        "numeric": "cpp",
        "optional": "cpp",
        "random": "cpp",
        "ratio": "cpp",
        "source_location": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "system_error": "cpp",
        "fstream": "cpp",
        "initializer_list": "cpp",
        "iomanip": "cpp",
        "iosfwd": "cpp",
        "iostream": "cpp",
        "limits": "cpp",
        "mutex": "cpp",
        "new": "cpp",
        "numbers": "cpp",
        "span": "cpp",
        "sstream": "cpp",
        "stdexcept": "cpp",
        "stop_token": "cpp",
        "streambuf": "cpp",
        "thread": "cpp",
        "cinttypes": "cpp",
        "typeindex": "cpp",
        "typeinfo": "cpp",
        "semaphore": "cpp"
    },
    
}