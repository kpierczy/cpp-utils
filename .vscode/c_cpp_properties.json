{
    "version": 4,
    "configurations": [
        {
            // Project config
            "name": "cpp-utils",
            "cStandard": "c11",
            "cppStandard": "c++20",
            "compilerPath": "/usr/bin/g++",
            // Intellisense mode
            "intelliSenseMode": "gcc-x86",

            // Include Paths (non-recursively)
            "includePath": [

                // Boost-ext sources
                "${workspaceFolder}/extern/boost-ext/di/include",
                "${workspaceFolder}/extern/boost-ext/sml/include",
                "${workspaceFolder}/extern/boost-ext/ut/include",

                // boost-sml utilities library
                "${workspaceFolder}/src/boost-sml/include",
                // Extended std library
                "${workspaceFolder}/src/estd/bits/include",
                "${workspaceFolder}/src/estd/concepts/include",
                "${workspaceFolder}/src/estd/enum/include",
                "${workspaceFolder}/src/estd/miscellaneous/include",
                "${workspaceFolder}/src/estd/pointers/include",
                "${workspaceFolder}/src/estd/preprocessor/include",
                "${workspaceFolder}/src/estd/strings/include",
                "${workspaceFolder}/src/estd/synchronisation/include",
                "${workspaceFolder}/src/estd/result/include",
                "${workspaceFolder}/src/estd/traits/include",
                // Extended STL library
                "${workspaceFolder}/src/estl/circular_buffer/include",
                "${workspaceFolder}/src/estl/namedtuple/include",
                // Patterns library
                "${workspaceFolder}/src/patterns/cprt/include",
                // Dimensional-analysis library
                "${workspaceFolder}/src/units/include",
                // Numeric library
                "${workspaceFolder}/src/numeric/include",
                // Utilities library
                "${workspaceFolder}/src/utilities/callback/include",
                "${workspaceFolder}/src/utilities/parseargs/include",

                // Tests
                "${workspaceFolder}/tests/include",

            ],
            // General defines
            "defines": [ ],
            // Browsed directories (recursively)
            "browse": {
                "limitSymbolsToIncludedHeaders": true,
                "path": [
                    "${workspaceFolder}/src"
                ]
            }
        }
    ]
}